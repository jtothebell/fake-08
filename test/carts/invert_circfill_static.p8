function _draw()

	cls()
	poke(0x5f34,0x2)

	-- hold ❎ to skip fill
	cc = circfill
	if (btn(❎)) cc = circ

	for z=7,1,-1 do
		local sx = cos(z/15/4) * 50
		local sy = sin(z/15/4) * 50
		cc(64+sx/z,64+sy/z,64/z, 7+z | 0x1800)
	end
end
